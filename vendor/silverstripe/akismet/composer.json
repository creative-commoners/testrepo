{
	"name": "silverstripe/akismet",
	"description": "Akismet antispam module for Silverstripe",
	"type": "silverstripe-vendormodule",
	"keywords": ["silverstripe", "spam", "akismet"],
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Damian Mooyman",
			"email": "damian.mooyman@gmail.com"
		}
	],
	"support": {
		"issues": "https://github.com/silverstripe/silverstripe-akismet/issues"
	},
	"require": {
		"silverstripe/cms": "^4.0",
		"tijsverkoyen/akismet": "1.1.0",
		"silverstripe/spamprotection": "^3.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^5.7",
		"squizlabs/php_codesniffer": "^3.0"
	},
	"autoload": {
        "psr-4": {
            "SilverStripe\\Akismet\\": "src",
            "SilverStripe\\Akismet\\Tests\\": "tests"
        }
    },
	"extra": {
		"branch-alias": {
			"dev-master": "4.x-dev"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
